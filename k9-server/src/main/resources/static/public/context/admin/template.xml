<svg:svg xmlns:svg='http://www.w3.org/2000/svg'
	xmlns:xlink='http://www.w3.org/1999/xlink'
	xmlns='http://www.kite9.org/schema/adl'
	xmlns:adl='http://www.kite9.org/schema/adl'>

	<svg:defs>
		<svg:clipPath id="iconCircle">
			<svg:circle r="50" cx="50" cy="50" />
		</svg:clipPath>
	</svg:defs>

	<!-- this handles embedded entities -->
	<template id="entity">
		<back k9-indicator="pulse"
			style='kite9-usage: decal; kite9-type: svg;  '>
			<svg:rect x='0' y='0' width='#{$width}' height='#{$height}'
				rx='#{$template-1}' ry='#{$template-1}' />
		</back>

		<contents />
	</template>

	<template id="icon">
		<inside style="kite9-usage: decal; kite9-type: svg; ">
			<svg:image x="0" y="0" width="100px" height="100px"
				xlink:href="https://gravatar.com/avatar/29de34339da3e024b8e6974b05c74530" clip-path="url(#iconCircle)"/>
		</inside>
	</template>

	<template id="badge">
		<surround style="kite9-type: svg; ">
			<svg:circle cx='0' cy='0' r='50px' class="round" />
		</surround>
		<inside style="kite9-usage: decal; kite9-type: svg; ">
			<svg:text x="#{$width div 2}" y="90px" class="grand"
				text-anchor="middle">
				<contents xpath="text()" />
			</svg:text>
		</inside>
	</template>

</svg:svg>