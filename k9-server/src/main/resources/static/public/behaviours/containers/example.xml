<svg:svg xmlns:svg='http://www.w3.org/2000/svg'>
  <svg:defs>
    <svg:style type="text/css">
      @import url("common-containers.css");
      @import url("/public/fonts/metropolis/metropolis.css");
      @import url("/public/context/editor/invisible.css");
      @import url("/public/behaviours/hoverable/hoverable.css");
      
      container, group {
        kite9-min-size: 200px 100px;
        kite9-margin: 15px;
        font-family: metropolis;
        font-size: 11px;
      }
    </svg:style>
    
     <svg:script type="module">
      import {initHoverable} from '../hoverable/hoverable.js';
      
      initHoverable();
    
    </svg:script>
  </svg:defs>
  <common-diagram xmlns="http://www.kite9.org/schema/adl" id="dia" style="kite9-layout: down; ">

    <group style="kite9-layout: right; ">

        <container id="c1">
          <label id="lab1">Unordered Container</label>
        </container>

        <container id="c1" layout="right">
          <label id="lab1">Left-To-Right Container</label>
        </container>

        <container id="c2" layout="down">
          <label id="lab1">Top-To-Bottom Container</label>
        </container>
    </group>
    
    <group style="kite9-layout: right; ">

        <container id="c1" class="dotted">
          <label id="lab1">Unordered Container</label>
        </container>

        <container id="c1" layout="right" class="dotted">
          <label id="lab1">Left-To-Right Container</label>
        </container>

        <container id="c2" layout="down" class="dotted">
          <label id="lab1">Top-To-Bottom Container</label>
        </container>
    </group>
    
    <group style="kite9-layout: right; ">

        <container id="c1">
        </container>

        <container id="c1" layout="right">
        </container>

        <container id="c2" layout="down">
        </container>
    </group>

    <group style="kite9-layout: right; ">
      <group id="g3">

      </group>

      <group id="g1" layout="right">

      </group>

      <group id="g2" layout="down">

      </group>


    </group>



  </common-diagram>
