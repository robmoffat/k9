<svg:svg xmlns:svg='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' xmlns='http://www.kite9.org/schema/adl'>

  <template id="textarea" k9-ui="orphan edit">
    <contents optional="true" />
  </template>
  
  <template id='connected' k9-ui="delete edit insert drag align connect contain autoconnect copy replace-connected" k9-palette="insert replace-connected">
    <back k9-indicator="pulse" style='kite9-usage: decal; kite9-type: svg; '>
      <svg:rect x='0' y='0' width='#{$width}' height='#{$height}' rx='#{$template-1}' ry='#{$template-1}' />
    </back>
    <front style="kite9-type: text; ">
      <contents optional="true" />
    </front>
  </template>

</svg:svg>